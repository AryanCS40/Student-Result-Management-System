<%- include('../../partials/head') %>
</head>
<body class="bg-gradient-to-br from-blue-100 to-blue-300 min-h-screen">
  <%- include('../../partials/nav') %>

  <main class="relative max-w-3xl mx-auto px-4 py-12">
    <section class="bg-white bg-opacity-20 backdrop-blur-lg rounded-xl shadow-lg p-8 space-y-6">
      <div class="flex items-center justify-between">
				<h1 class="text-2xl font-bold text-blue-700">Create Result for <%= student.name %></h1>
        <a href="/host/home" class="text-sm text-blue-600 hover:underline">Back to Home</a>
      </div>

      <!-- ACTION includes the student id -->
      <form action="/host/results/add/<%= student._id %>" method="post" id="add-result-form" class="w-full space-y-6">
        
				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					<input type="text" name="name_display" value="<%= student.name %>"  class="w-full px-4 py-2 rounded-lg bg-gray-100" />
					<input type="text" name="rollno_display" value="<%= student.rollno %>"  class="w-full px-4 py-2 rounded-lg bg-gray-100" />
          <!-- hidden fields so server can access them if needed (optional) -->
          <input type="hidden" name="studentId" value="<%= student._id %>">
        </div>

				<div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
					<input type="text" name="sem" placeholder="Semester" class="w-full px-4 py-2 rounded-lg" required>
					<input type="text" name="exam" placeholder="Exam (e.g. Midterm, Final)" class="w-full px-4 py-2 rounded-lg" required>
        </div>

        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-blue-700">Subjects</h2>
            <div class="flex gap-2">
							<button type="button" id="add-subject" class="bg-green-500 text-black rounded-lg px-3 py-2">Add Subject</button>
							<button type="button" id="clear-subjects" class="bg-yellow-200 rounded-lg px-4 py-2">Clear</button>
            </div>
          </div>

          <div id="subjects-container" class="space-y-3">
            <!-- initial row -->
						<div class="grid grid-cols-1 md:grid-cols-5 gap-3 subject-row overflow-hidden items-start" data-index="0">
							<input type="text" name="subjects[0][name]" placeholder="Subject name" required class="px-4 py-2 rounded-lg md:col-span-2" />
							<input type="text" name="subjects[0][code]" placeholder="Code" required class="px-4 py-2 rounded-lg" />
							<input type="number" name="subjects[0][maxMarks]" placeholder="Max marks" min="0" required class="px-4 py-2 rounded-lg" />
							<input type="number" name="subjects[0][obtainedMarks]" placeholder="Obtained marks" min="0" required class="px-4 py-2 rounded-lg" />
							<button type="button" class="remove-subject bg-red-600 text-white px-3 py-2 rounded-lg md:col-span-1">Remove</button>
						</div>
          </div>
        </div>

        <div class="flex justify-end">
					<button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg">Submit</button>
        </div>
      </form>
    </section>
  </main>

  <script src="/scripts/result.js"></script>
</body>
</html>
