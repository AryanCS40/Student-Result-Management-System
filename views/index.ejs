<%- include('partials/head') %>
</head>
<body class="bg-gradient-to-br from-blue-100 to-blue-300 min-h-screen">
  <%- include('partials/nav') %>

  <% if(error.length>0){ %>
    <div class="flashMessage fixed top-20 left-1/2 transform -translate-x-1/2 bg-red-100 border border-red-400 text-red-700 px-6 py-3 rounded-lg shadow-lg max-w-md w-full flex justify-center items-center">
      <span class="font-medium text-center"><%= error %></span>
    </div>
  <% } %>

	<main class="container mx-auto px-4 py-12 flex flex-col items-center">
    <h1 class="text-3xl font-bold text-blue-700 text-center mb-6">Welcome to My WebPage</h1>

		<div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-10">
			<div class="flex flex-col items-center">
				<img src="images/user.svg" alt="user" class="h-20 w-20 mb-4">
				<a href="/student/login" class="inline-flex items-center justify-center bg-yellow-600 text-white font-semibold px-6 py-3 rounded-lg shadow hover:bg-yellow-700 transition w-40 text-center">Student</a>
      </div>
			<div class="flex flex-col items-center">
				<img src="images/host.svg" alt="host" class="h-20 w-20 mb-4">
				<a href="/host/login" class="inline-flex items-center justify-center bg-red-600 text-white font-semibold px-6 py-3 rounded-lg shadow hover:bg-red-700 transition w-40 text-center">Host</a>
      </div>
    </div>
  </main>

  <script src="/scripts/message.js"></script>
</body>
</html>