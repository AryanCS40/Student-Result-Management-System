<%- include('../partials/head') %>
<%- include('../partials/nav') %>

    <div class="container mx-auto px-4 py-8">
        <div class="bg-white bg-opacity-20 backdrop-blur-lg rounded-xl shadow-lg p-8">
            <!-- Header Section -->
			<div class="mb-8 text-center">
				<h1 class="text-2xl font-bold text-blue-700">Result Portal</h1>
				<p class="text-gray-600">Student: <%= student.name %> (Roll No: <%= student.rollno %>)</p>
            </div>

            <% if (!results || results.length === 0) { %>
                <div class="text-center py-8">
                    <p class="text-gray-600">No results available.</p>
                </div>
            <% } else { %>
                <!-- Results Table -->
				<div class="overflow-x-auto table-responsive">
					<table class="min-w-[640px] w-full border-collapse bg-white bg-opacity-50 rounded-lg overflow-hidden text-sm sm:text-base">
                        <thead>
                            <tr class="bg-blue-600 text-white">
                                <th class="px-4 py-3 text-left text-xs sm:text-sm">Name</th>
                                <th class="px-4 py-3 text-left text-xs sm:text-sm">Rollno.</th>
                                <th class="px-4 py-3 text-center text-xs sm:text-sm">Semester</th>
                                <th class="px-4 py-3 text-center text-xs sm:text-sm">Exam Type</th>
                                <th class="px-4 py-3 text-center text-xs sm:text-sm">Date</th>
                                <th class="px-4 py-3 text-center text-xs sm:text-sm">View</th>
                            </tr>
                        </thead>
                        <% results.forEach(result => { %>
                        <tbody class="divide-y divide-gray-200">
                          <tr class="hover:bg-blue-50 transition-colors">
                            
                              <td class="px-4 py-4"><%= student.name %></td>
                              <td class="px-4 py-4"><%= student.rollno %></td>
                                    <td class="px-4 py-4"><%= result.sem %></td>
                                    <td class="px-4 py-4 text-center"><%= result.exam%></td>
                                    <td class="px-4 py-4 text-center text-sm text-gray-500">
                                        <%= new Date(result.createdAt).toLocaleDateString() %>
                                    </td>
                                    <td class="px-4 py-4 text-center">
                                        <a href="/student/result/<%=result._id%>" class="bg-yellow-600 text-white font-semibold px-4 py-2 rounded-lg shadow hover:bg-yellow-700 transition inline-block w-full sm:w-auto text-sm">View</a>
                                    </td>
                                    

                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>