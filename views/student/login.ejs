<%- include('../partials/head') %>

<% if(error.length>0){ %>
    <div class="flashMessage fixed top-10 left-1/2 transform -translate-x-1/2 bg-red-100 border border-red-400 text-red-700 px-6 py-3 rounded-lg shadow-lg max-w-md w-full flex justify-center items-center ">
        <span class="font-medium text-center">
            <%= error[0] %>
        </span>
    </div>
<% } %>



    <div class="flex flex-col items-center justify-center min-h-screen ">
		<h1 class="text-2xl sm:text-3xl font-bold text-blue-700 mb-6 text-center">Login with your account</h1>
		<form action="../student/login" method="post" class="max-w-md w-full bg-white bg-opacity-20 backdrop-blur-lg rounded-xl shadow-lg p-6 sm:p-8 flex flex-col space-y-4 sm:space-y-6 mx-4">

            <input 
                type="text" 
                name="rollno" 
                placeholder="Enter your Roll Number"
                class="px-4 py-2 rounded-lg bg-white bg-opacity-60 focus:outline-none focus:ring-2 focus:ring-blue-400 placeholder-gray-700 font-medium"
            >
            <input 
                type="password" 
                name="password" 
                placeholder="Enter your password"
                class="px-4 py-2 rounded-lg bg-white bg-opacity-60 focus:outline-none focus:ring-2 focus:ring-blue-400 placeholder-gray-700 font-medium"
            >
            <button 
                type="submit"
				class="bg-blue-600 text-white font-bold py-2 rounded-lg shadow hover:bg-blue-700 transition w-full sm:w-auto"
            >
                Login
            </button>
        </form>
		<p class="mt-6 text-gray-700 px-4 text-center">Don't have an account?
			<a href="./signup" class="text-blue-600 hover:underline font-semibold ml-1">Signup</a>
        </p>
    </div>
   <script src="/scripts/message.js"></script>
</body>
</html>