<header class="sticky top-0 z-50 bg-blue-600/80 backdrop-blur-lg shadow-lg">
	<nav class="container mx-auto px-4 md:px-6 flex items-center justify-between">
		<div class="flex items-center gap-3 py-2">
			<img src="/images/logo.svg" alt="logo" class="h-10 w-auto hidden sm:block"/>
			<span class="font-semibold text-base sm:text-lg text-white">STUDENT RESULT MANAGEMENT SYSTEM</span>
		</div>

    <!-- Mobile toggle -->
    <button id="nav-toggle" class="md:hidden text-white focus:outline-none" aria-label="Toggle menu">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

		<div id="nav-menu" class="hidden md:flex md:items-center gap-2">
			<ul class="flex flex-col md:flex-row md:items-center md:space-x-6 text-center">
        <% if(role === "none"){ %>
					<li>
						<a href="/" class="inline-flex items-center gap-2 text-white hover:text-blue-200 font-semibold transition px-3 py-2 md:py-0">
							<!-- home icon -->
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M3 12l9-9 9 9M4.5 10.5V21h6v-6h3v6h6v-10.5" />
							</svg>
							Home
						</a>
					</li>
        <% } if(role === "student"){ %>
          <% if(student && student._id){ %>
						<li>
							<a href="/student/home" class="inline-flex items-center gap-2 text-white hover:text-blue-200 font-semibold transition px-3 py-2 md:py-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M3 12l9-9 9 9M4.5 10.5V21h6v-6h3v6h6v-10.5" />
								</svg>
								Home
							</a>
						</li>
						<li>
							<a href="/student/checkresult" class="inline-flex items-center gap-2 text-white hover:text-blue-200 font-semibold transition px-3 py-2 md:py-0">
								<!-- document icon -->
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M9 12h6M9 16h6M8 3h5l5 5v11a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z" />
								</svg>
								Results
							</a>
						</li>
						<li>
							<a href="/student/logout" class="inline-flex items-center gap-2 text-white hover:text-red-200 font-semibold transition px-3 py-2 md:py-0">
								<!-- logout icon -->
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6A2.25 2.25 0 0 0 5.25 5.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15M12 9l3 3m0 0l-3 3m3-3H3" />
								</svg>
								Logout
							</a>
						</li>
          <% } else { %>
						<li>
							<a href="/student/login" class="inline-flex items-center gap-2 text-white hover:text-blue-200 font-semibold transition px-3 py-2 md:py-0">
								<!-- login icon -->
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 9l3 3m0 0l-3 3m3-3H6m6-9h3a3 3 0 0 1 3 3v12a3 3 0 0 1-3 3h-3" />
								</svg>
								Student Login
							</a>
						</li>
          <% } %>
        <% } else if(role === "host"){ %>
          <% if(host && host._id){ %>
						<li>
							<a href="/host/home" class="inline-flex items-center gap-2 text-white hover:text-blue-200 font-semibold transition px-3 py-2 md:py-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M3 12l9-9 9 9M4.5 10.5V21h6v-6h3v6h6v-10.5" />
								</svg>
								Home
							</a>
						</li>
						<li>
							<a href="/host/logout" class="inline-flex items-center gap-2 text-white hover:text-red-200 font-semibold transition px-3 py-2 md:py-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6A2.25 2.25 0 0 0 5.25 5.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15M12 9l3 3m0 0l-3 3m3-3H3" />
								</svg>
								Logout
							</a>
						</li>
          <% } else { %>
						<li>
							<a href="/host/login" class="inline-flex items-center gap-2 text-white hover:text-blue-200 font-semibold transition px-3 py-2 md:py-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 9l3 3m0 0l-3 3m3-3H6m6-9h3a3 3 0 0 1 3 3v12a3 3 0 0 1-3 3h-3" />
								</svg>
								Host Login
							</a>
						</li>
						<li>
							<a href="/host/signup" class="inline-flex items-center gap-2 text-white hover:text-blue-200 font-semibold transition px-3 py-2 md:py-0">
								<!-- user-plus icon -->
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M15 19a6 6 0 1 0-12 0M21 8h-3m0 0h-3m3 0V5m0 3v3M9 11a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" />
								</svg>
								SignUp
							</a>
						</li>
          <% } %>
        <% } %>
      </ul>
    </div>
  </nav>

  <script>
    // simple mobile toggle
    (function(){
      const btn = document.getElementById('nav-toggle');
      const menu = document.getElementById('nav-menu');
      if(btn && menu){
				btn.addEventListener('click', ()=> menu.classList.toggle('hidden'));
				menu.addEventListener('click', (e) => {
					// close on link tap (mobile)
					if(e.target.closest('a') && !window.matchMedia('(min-width: 768px)').matches){
						menu.classList.add('hidden');
					}
				});
      }
    })();
  </script>
</header>